    <link href="/css/custom.css" rel="stylesheet">

</head>

<body id="login_bg">

    <nav id="menu" class="fake_menu"></nav>

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- End Preload -->

    <div id="login">
        <aside>
            <figure>
                <a href="/Home/Index"><img src="/img/logo.png" width="149" height="42" data-retina="true" alt=""></a>
            </figure>
            @if (ViewBag.LoginStatus==true)
            {
                <div class="alert alert-success">
                    <p class="help-block">ورود با موفقیت انجام شد</p>
                </div>

                <script>
                    // Your delay in milliseconds
                    var delay = 3000;
                    setTimeout(function () { window.location = "https://localhost:44395/Home/Index"; }, delay);
                </script>

            }
            <form action="/Account/Login" method="post">
                <div class="form-group">
                    <span class="input">
                        <input class="input_field" asp-for="UserName" type="text" autocomplete="off">
                        <span asp-validation-for="UserName" id="validation"></span>
                        <label class="input_label">
                            <span class="input__label-content">نام کاربری  </span>
                        </label>
                    </span>
                    @if (ViewBag.LoginStatus==false)
                    {
                        <div class="alert alert-danger" > کاربری با مشخصات وارد شده یافت نشد</div>
                    }

                    <span class="input">
                        <input class="input_field" asp-for="PassWord" type="password" autocomplete="new-password">
                        <span asp-validation-for="PassWord" id="validation"></span>

                        <label class="input_label">
                            <span class="input__label-content">رمز شما</span>
                        </label>
                    </span>
                    <span>
                        <label>
                            <input type="checkbox" asp-for="RememberMe" />
                            مرا به خاطر بسپار
                        </label>
                    </span>
                    <hr />
                    <small><a href="/Account/ForgetPassword">بازیابی کلمه عبور!</a></small>
                </div>
                <input type="submit" class="btn_1 rounded full-width add_top_60" value="ورود" />
                <div class="text-center add_top_10">کاربر جدید هستید <strong><a href="/Account/Register">ثبت نام!</a></strong></div>
            </form>
            <div class="copy">ZabanYad</div>
        </aside>
    </div>
    <!-- /login -->
    <!-- COMMON SCRIPTS -->
    <script src="/js/jquery-2.2.4.min.js"></script>
    <script src="/js/common_scripts.js"></script>
    <script src="/js/main.js"></script>
    <script src="/assets/validate.js"></script>

</body>

