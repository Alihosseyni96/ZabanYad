                    <li class="text-left"><span><a href="/Home/Index" target="_parent">  خانه   </a></span></li>
                    <li class="text-left"><span><a href="/CourseList/Index" target="_parent"> لیست تمامی دوره ها </a></span></li>
                    @await Component.InvokeAsync("MainSideBarGroupsComponent")
                    @if (showAdminButton)
                    {
                        <li class="text-left"><span><a href="/Admin/Dashboard/Index" target="_parent"> پنل مدیریت سایت </a></span></li>

                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="text-left"><span><a href="/UserPanel/Home/Index" target="_parent"> پنل کاربری شما  </a></span></li>
                        <li class="text-left d-lg-none "><span><a href="/Account/Logout" target="_parent">  خروج   </a></span></li>

                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="text-left d-lg-none "><span><a href="/Account/Register" target="_parent">  ثبت نام   </a></span></li>
                        <li class="text-left d-lg-none "><span><a href="/Account/Login" target="_parent">  ورود   </a></span></li>

                    }

                </ul>
            </nav>
            <!-- Search Menu -->
            <div class="search-overlay-menu">
                <span class="search-overlay-close"><span class="closebt"><i class="ti-close"></i></span></span>
                <form role="search" id="searchform" method="get" action="/CourseList/Index">
                    <input value="" name="searchKey" type="search" placeholder="جستجو..." />
                    <button type="submit">
                        <i class="icon_search"></i>
                    </button>
                </form>
            </div><!-- End Search Menu -->
        </header>
