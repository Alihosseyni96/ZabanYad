@model long

@section Header{
    <h3>مراحل خرید شما</h3>
    <div class="container">
        <div class="bs-wizard clearfix">
            <div class="bs-wizard-step active">
                <div class="text-center bs-wizard-stepnum">سبد خرید</div>
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>
                <a href="#0" class="bs-wizard-dot"></a>
            </div>

            <div class="bs-wizard-step active">
                <div class="text-center bs-wizard-stepnum">پرداخت</div>
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>
                <a href="#0" class="bs-wizard-dot"></a>
            </div>

            <div class="bs-wizard-step active">
                <div class="text-center bs-wizard-stepnum">پایان!</div>
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>
                <a href="#0" class="bs-wizard-dot"></a>
            </div>
        </div>
        <!-- End bs-wizard -->
    </div>
}


<h1 class="wizard-header" style="margin:20px">تکمیل خرید  </h1>

<div class="alert alert-success">
    <p><strong>     کاربر گرامی پرداخت شما با موفقیت انجام شد(شماره فاکتور:@Model)جهت مشاهده تراکنش ها و دوره های خریداری شده به پنل شخصی خود مراجعه کنید  </strong></p>
</div>
