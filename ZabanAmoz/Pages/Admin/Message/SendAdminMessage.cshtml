<div class="box_general">
    <h4> ارسال پیام </h4>
    <hr />
    <div class="list_general">

        <form  method="post">
            <div class="form-group">
                <label> موضوع پیام  </label>
                <input type="text" asp-for="AdminMessage.MessageTitle" class="form-control">
                <span asp-validation-for="AdminMessage.MessageTitle" id="validation"></span>
            </div>

            <div class="form-group">
                <label> متن پیام   </label>
                <textarea rows="10" asp-for="AdminMessage.MessageBody"></textarea>
                <span asp-validation-for="AdminMessage.MessageBody" id="validation"></span>

            </div>
            <hr />
            <div class="col-md-6">
                <div class="form-group">
                    <label> گیرندگان   </label>
                    @foreach (var role in Model.Roles)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="@role.RoleId" name="roleList" id="roleList">
                            <label class="form-check-label" for="flexCheckDefault">
                                --@role.RoleTitle
                            </label>
                        </div>
                    }
                </div>
            </div>


            <input type="submit" value="ارسال " class="btn btn-block  btn-success">

        </form>


    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('AdminMessage_MessageBody', {
            customConfig: '/js/Config.js'
        });

    </script>


