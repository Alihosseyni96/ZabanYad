@page
@model ZabanAmoz.Pages.Admin.Episode.CreateEpisodeModel
@{
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">پنل مدیریت</a>
    </li>
    <li class="breadcrumb-item active">  مدیریت دوره ها  </li>
    <li class="breadcrumb-item active">  افزودن قسمت جدید    </li>

</ol>
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>افزودن قسمت جدید </h2>
    </div>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" value="@ViewData["CourseId"]" asp-for="CreateEpisode.CourseId" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>عنوان قسمت </label>
                    <input type="text" class="form-control" asp-for="CreateEpisode.EpissodeTitle" placeholder="عنوان قسمت  ">
                    <span asp-validation-for="CreateEpisode.EpissodeTitle" id="validation"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>مدت زمان قسمت  </label>
                    <input  class="form-control" asp-for="CreateEpisode.EpisodeTime" placeholder="  زمان قسمت(00:00:00)    ">
                    <span asp-validation-for="CreateEpisode.EpisodeTime" id="validation"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label>فایل قسمت   </label>
                    <input type="file" class="form-control" asp-for="CreateEpisode.EpisodeFile">
                    <span asp-validation-for="CreateEpisode.EpisodeFile" id="validation"></span>
                </div>
            </div>
            <div class="col-md-12">
                <input type="checkbox" asp-for="CreateEpisode.IsFree">
                <label>  رایگان است  </label>
                <span asp-validation-for="CreateEpisode.IsFree" id="validation"></span>

            </div>
            <hr />
            <div>
                <input type="submit" class="btn btn-success btn-sm" value="ثبت قسمت " />
            </div>
        </div>
    </form>
</div>
