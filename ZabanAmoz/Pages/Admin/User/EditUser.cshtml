@page
@model ZabanAmoz.Pages.Admin.User.EditUserModel
@{
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">پنل مدیریت</a>
    </li>
    <li class="breadcrumb-item active">  مدیریت کاربران  </li>
    <li class="breadcrumb-item active">  ویرایش کاربر      </li>

</ol>
<div class="box_general padding_bottom">
    <div class="header_box version_2">
        <h2><i class="fa fa-file"></i>ویرایش کاربر   </h2>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <input type="hidden" asp-for="UserForEdit.ImageName" />
            <input type="hidden" asp-for="UserForEdit.UserId" />
            <div class="col-md-6">
                <div class="form-group">
                    <label>نام کاربری </label>
                    <input type="text" class="form-control" asp-for="UserForEdit.UserName" placeholder="نام کاربری ">
                    <span asp-validation-for="UserForEdit.UserName" id="validation"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>ایمیل  </label>
                    <input type="text" class="form-control" asp-for="UserForEdit.Email" placeholder="ایمیل  ">
                    <span asp-validation-for="UserForEdit.Email" id="validation"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>شماره همراه  </label>
                    <input type="text" class="form-control" asp-for="UserForEdit.PhoneNumber" placeholder="شماره همراه  ">
                    <span asp-validation-for="UserForEdit.PhoneNumber" id="validation"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>کلمه عبور  </label>
                    <input type="password" class="form-control" asp-for="UserForEdit.Password" placeholder="کلمه عبور  ">
                    <span asp-validation-for="UserForEdit.Password" id="validation"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>تکرار کلمه عبور  </label>
                    <input type="password" class="form-control" asp-for="UserForEdit.RePassword" placeholder="تکرار کلمه عبور   ">
                    <span asp-validation-for="UserForEdit.RePassword" id="validation"></span>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group">
                    <label>موجودی کیف پول    </label>
                    <input type="text" class="form-control" asp-for="UserForEdit.WalletCharge" placeholder="موجودی کیف پول بر حسب تومان     ">
                    <span id="Validation"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label> انتخاب نقش  </label>
                    @foreach (var role in Model.ShowRoles)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @((Model.UserForEdit.RolesId.Contains(role.RoleId))?"checked":"") value="@role.RoleId" name="roleList">
                            <label class="form-check-label" for="flexCheckDefault">
                                ---@role.RoleTitle
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>انتخاب تصویر      </label>
                    <input type="file" class="form-control" asp-for="UserForEdit.UserImage">
                    <span id="Validation"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <img src="/UserImg/@Model.UserForEdit.ImageName" class="img-thumbnail" style="max-width:150px" id="userImg" />
                </div>
            </div>

            <div>
                <input type="submit" class="btn btn-success btn-sm" value="ثبت کاربر " />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script>

        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#userImg').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#CreateUser_UserImage").change(function () {
            readURL(this);
        });
    </script>
    }
